@{
	bool CreateFlag = CustomeHtmlHelper.CheckPermission("/Services/Prescription", "Create");
	bool DeleteFlag = CustomeHtmlHelper.CheckPermission("/Services/Prescription", "Delete");
	bool EditFlag = CustomeHtmlHelper.CheckPermission("/Services/Prescription", "Edit");
	bool DetailFlag = CustomeHtmlHelper.CheckPermission("/Services/Prescription", "Detail");
	bool ConfirmFlag = CustomeHtmlHelper.CheckPermission("/Services/Prescription", "CONFIRMPAYMENT");
}
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Quản lý kê toa thuốc</h1>
			</div>
			<div class="col-sm-6 text-right">
				<div class="pull-right">
					@if (CreateFlag == true)
					{
						<a class="btn btn-primary" href="/Services/Prescription/Create" id="btn-create" target="_blank"><i class="fa fa-plus-square"></i> Tạo toa thuốc</a>
					}
				</div>
			</div>
		</div>
	</div>
</div>
<div class="content">
	<div class="form-horizontal">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-body">
					<form id="frmSearch">
						<div class="col-md-12">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="RoleCode" class="col-form-label">Mã toa thuốc</label>
												</div>
												<div class="col-md-9">
													<input type="text" id="PrescriptionCode" name="PrescriptionCode" class="form-control">
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="Client" class="col-form-label">Tên bệnh nhân</label>
												</div>
												<div class="col-md-9">
													<input type="text" id="Client" name="Client" class="form-control">
												</div>
											</div>
										</div>
									</div>
									<div class="row mt-3">
										<div class="col-md-12">
											<div class="row g-3 align-items-center">
												<div class="col-md-12 text-center">
													<label class="col-form-label">Ngày tạo</label>
												</div>

											</div>
										</div>
									</div>

									<div class="row mt-3">
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="FromDate" class="col-form-label">Từ ngày</label>
												</div>
												<div class="col-md-9">
													<input type="date" id="FromDate" name="FromDate" class="form-control">
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="ToDate" class="col-form-label">Đến ngày</label>
												</div>
												<div class="col-md-9">
													<input type="date" id="ToDate" name="ToDate" class="form-control">
												</div>
											</div>
										</div>
									</div>

									<div class="row" style="margin-top: 15px">
										<div class="col-md-12 text-center">
											<button type="button" class="btn btn-primary" id="btn-search">
												<i class="fas fa-search"></i>
												Tìm Kiếm
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="card">
						<div class="card-body">
							<div id="divSearchResult">
								@Html.Partial("_PaggingServerSide")
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="deleteConfirmation" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Xóa toa thuốc</h4>
				<button type="button" class="close modal-closing" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">
				<p class="modal-question">Bạn có chắc bạn muốn xóa toa thuốc này không?</p>
				<p class="text-warning"><small>Hành động này sẽ không thể khôi phục được</small></p>
			</div>
			<div class="modal-footer">
				<input type="button" class="modal-closing btn btn-default" id="CancelButton" data-bs-dismiss="modal" value="Cancel">
				<input type="button" class="btn btn-danger" value="Delete" id="DeleteConfirm">
				<input type="hidden" id="DeleteId" name="DeleteId" />
			</div>
		</div>
	</div>
</div>

<div id="XacNhanThanhToan" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title">Xác nhận thanh toán toa thuốc</h4>
				<button type="button" class="close modal-closing" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">
				<div class="row" id="DetailToaThuoc">

				</div>
			</div>
			<div class="modal-footer">
				<input type="button" class="modal-closing btn btn-default" id="CancelButton" data-bs-dismiss="modal" value="Cancel">
				<input type="button" class="btn btn-primary" id="XacNhanThanhToanConfirm" value="Xác nhận thanh toán">
				<input type="hidden" id="XacNhanThanhToanId" name="XacNhanThanhToanId" />
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">

	function Delete2(Id) {
		var formdata = new FormData();
		formdata.append("Id", Id);

		$.ajax({
			type: "POST",
			url: "/Services/Prescription/Delete",
			data: formdata,
			processData: false,
			contentType: false,
			beforeSend: function () {
				$("#loading").show();
			},
			success: function (data) {
				$("#deleteConfirmation").modal("hide");
				if (data.isSucess == true) {
					if (data.title && data.message) {
						$("#deleteConfirmation").modal("hide");
						AlertPopup(1, data.title, data.message);
					}
					if (data.redirect) {
						setTimeout(function () {
							window.location.href = data.redirect;
						}, 1500);
					}
				}
			},
			error: function (event, xhr, options, exc) {
				AlertPopup(2, "Lỗi", event.message);
			},
			complete: function () {
				$("#loading").hide();
			}
		});

	}

	function KiemTraXacNhanThanhToan(Id) {
		var formdata = new FormData();
		formdata.append("Id", Id);

		$.ajax({
			type: "POST",
			url: "/Services/Prescription/GetPayMent",
			data: formdata,
			processData: false,
			contentType: false,
			beforeSend: function () {
				$("#loading").show();
			},
			success: function (data) {
				$("#DetailToaThuoc").html("");
				$("#DetailToaThuoc").html(data);
			},
			error: function (event, xhr, options, exc) {
				AlertPopup(2, "Lỗi", event.message);
			},
			complete: function () {
				$("#loading").hide();
			}
		});
	}

	$(document).ready(function () {
		var DeleteFlag = "@DeleteFlag";
		var EditFlag = "@EditFlag";
		var DetailFlag = "@DetailFlag";
		var ConfirmFlag = "@ConfirmFlag";
		JqueryAutoComplete("/Services/Prescription/ClientSearch", "#Client");
		var columns = [
			{
				"data": "STT",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "PrescriptionCode",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "PatientName",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "DoctorName",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "MedicineList",
				"orderable": false,
				"className": "text-center",
				"render": function (data, type, row) {
					if (data != "" && data != null) {
						var s = '<select class="form-control dropdown">';
						$.each(data, function (index, value) {
							s += '<option>' + value + '</option>';
						});
						s += '</select >';
						return s;
					}
					return "";
				}
			},
			{
				"data": "IllnessList",
				"orderable": false,
				"className": "text-center",
				"render": function (data, type, row) {
					if (data != "" && data != null) {
						var s = '<select class="form-control dropdown">';
						$.each(data, function (index, value) {
							s += '<option>' + value + '</option>';
						});
						s += '</select >';
						return s;
					}
					return "";
				}
			},
			{
				"data": "Note",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "TotalMoney",
				"className": "text-center",
				"orderable": true,
				"render": function (data, type, row) {
					if (data != null) {
						return CurrencyFormat(data);
					}
					return data;
				}
			},
			{
				"data": "Status",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "PrescriptionId",
				"className": "text-center",
				"orderable": false,
				"render": function (data, type, row) {
					if (data != "" && data != null) {
						var s = '';
						if (row.IsPay == false) {
							if (EditFlag == 'True') {
								s = '<a class="btn btn-info" href="/Services/Prescription/Edit/' + data + '"><i class="fa-solid fa-pen-to-square"></i>Chỉnh sửa</a>';
							}
							if (DeleteFlag == 'True') {
								s += '<button class="btn-xoa-toa-thuoc btn btn-danger ml-2" data-id="' + data + '"><i class="fa-solid fa-circle-xmark"></i>Xóa</button>';
							}
							if (ConfirmFlag == 'True') {
								s += '<button class="btn-xacnhanthanhtoan-toa-thuoc btn btn-success ml-2" data-id="' + data + '"><i class="fa-solid fa-clipboard-check"></i>Xác nhận thanh toán</button>';

							}
						}
						else {
							if (DetailFlag == 'True') {
								s = '<a class="btn btn-info" href="/Services/Prescription/Detail/' + data + '"><i class="fa-solid fa-eye"></i>Xem chi tiết</a>';

							}
						}
						return s;
					}
					return "";
				}
			}
		];
		PaggingServerSideSearchInitialWithClick("Services/Prescription", columns, true);

		CloseSideBar();
		$(".modal-closing").on('click', function () {
			$("#DeleteId").val("");
			$("#XacNhanThanhToanId").val("");
		});
	});

	$(document).on("click", ".btn-xoa-toa-thuoc", function (e) {
		e.preventDefault();
		$("#DeleteId").val($(this).data("id"));
		$("#deleteConfirmation").modal("show");
	});
	$(document).on("click", "#DeleteConfirm", function (e) {
		e.preventDefault();
		Delete2($("#DeleteId").val());
	});



	//Xác nhận thanh toán
	$(document).on("click", ".btn-xacnhanthanhtoan-toa-thuoc", function (e) {
		e.preventDefault();
		KiemTraXacNhanThanhToan($(this).data("id"));
		$("#XacNhanThanhToanId").val($(this).data("id"));
		$("#XacNhanThanhToan").modal("show");
	});


	$(document).on("click", "#XacNhanThanhToanConfirm", function (e) {
		e.preventDefault();
		var formdata = new FormData();
		formdata.append("Id", $("#XacNhanThanhToanId").val());

		$.ajax({
			type: "POST",
			url: "/Services/Prescription/ConfirmPayment",
			data: formdata,
			processData: false,
			contentType: false,
			beforeSend: function () {
				$("#loading").show();
			},
			success: function (data) {
				$("#XacNhanThanhToan").modal("hide");
				if (data.isSucess == true) {
					if (data.title && data.message) {
						$("#XacNhanThanhToan").modal("hide");
						AlertPopup(1, data.title, data.message);
					}
					if (data.redirect) {
						setTimeout(function () {
							window.location.href = data.redirect;
						}, 1500);
					}
				}
			},
			error: function (event, xhr, options, exc) {
				AlertPopup(2, "Lỗi", event.message);
			},
			complete: function () {
				$("#loading").hide();
			}
		});
	});

</script>

