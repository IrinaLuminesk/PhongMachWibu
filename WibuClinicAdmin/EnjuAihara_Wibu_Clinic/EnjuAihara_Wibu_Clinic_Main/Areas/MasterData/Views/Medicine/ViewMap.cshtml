@model IEnumerable<EnjuAihara.ViewModels.MasterData.Coordinate>
@{
	var GoogleMapApiKey = EnjuAihara.Constant.Config.Key.MapApi;
	var Id = (Guid)ViewBag.MedicineId;
	var CoordLst = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
}
<style>
	#googleMapsHolder {
		padding: 0;
		padding-top: 5px;
	}

	#map {
		position: relative;
		padding-bottom: 90%;
		// This is the aspect ratio height: 0;
		overflow: hidden;
	}

	@@media (min-width: 992px) {
		#map {
			padding-bottom: 650px;
		}
	}

	#map iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100% !important;
		height: 100% !important;
	}

	.hehe {
		color: white !important;
	}

	.pond-info {
		margin-bottom: 15px;
		width: 100%;
		margin-right: 15px;
	}

		.pond-info td {
			text-align: left !important;
			font-weight: bold;
		}

			.pond-info td:nth-child(2) {
				text-align: right !important;
				font-weight: normal;
			}

	.gm-style .gm-style-iw {
		width: 100% !important;
		height: 100% !important;
		min-height: 300px !important;
		display: block !important;
		top: 0 !important;
		left: 0 !important;
		padding-left: 20px;
		max-width: 400px !important;
	}

		/*style the paragraph tag*/
		.gm-style .gm-style-iw div:first-child {
			/*background: red;*/
			min-width: 300px;
		}

	.gm-style .gm-style-iw-c > button {
		top: -3px !important;
		right: -3px !important;
	}

	.gm-style .gm-style-iw-d > div > div {
		line-height: 3.0;
	}
</style>
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Danh sách các nhà cung cấp</h1>
			</div>
			<div class="col-sm-6 text-right">
				<div class="pull-right">
					<a class="btn btn-info" href="/MasterData/Medicine"><i class="fa-solid fa-arrow-rotate-left"></i>Quay lại</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="content">
	<div class="form-horizontal">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="col-md-12">
						<div class="card">
							<div class="card-body">
								<div id="googleMapsHolder">
									<div id="map"></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=@GoogleMapApiKey&callback=initMap&language=vi"></script>
<script src="~/Scripts/GoogleMapApi/Kamisato_Ayaka.js"></script>
<script type="text/javascript">


	$(document).ready(function () {
		const Coords = JSON.parse('@Html.Raw(@CoordLst)');
		initMap(Coords);
	});
</script>
