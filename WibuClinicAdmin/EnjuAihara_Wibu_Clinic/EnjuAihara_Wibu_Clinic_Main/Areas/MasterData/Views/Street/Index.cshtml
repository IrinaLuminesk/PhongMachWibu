<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Quản lý đường phố</h1>
			</div>
			<div class="col-sm-6 text-right">
				<div class="pull-right">
					<a class="btn btn-primary" href="/Masterdata/Street/Create" id="btn-create" target="_blank"><i class="fa fa-plus-square"></i> Thêm mới</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="content">
	<div class="form-horizontal">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-body">
					<form id="frmSearch">
						<div class="col-md-12">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="StreetName" class="col-form-label">Tên đường</label>
												</div>
												<div class="col-md-9">
													<input type="text" id="StreetName" name="StreetName" class="form-control">
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="InCity" class="col-form-label">Thuộc thành phố</label>
												</div>
												<div class="col-md-9">
													<input type="text" id="InCity" name="InCity" class="form-control">

												</div>
											</div>
										</div>
									</div>


									<div class="row mt-3">
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="InDistrict" class="col-form-label">Thuộc quận</label>
												</div>
												<div class="col-md-9">
													<input type="text" id="InDistrict" name="InDistrict" class="form-control">
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="Actived" class="col-form-label">Trạng thái</label>
												</div>
												<div class="col-md-9">
													@Html.DropDownList("Actived", (SelectList)ViewBag.Actived, "-- Tất cả --", new { @class = "form-control" })
												</div>
											</div>
										</div>
									</div>

									<div class="row" style="margin-top: 15px">
										<div class="col-md-12 text-center">
											<button type="button" class="btn btn-primary" id="btn-search">
												<i class="fas fa-search"></i>
												Tìm Kiếm
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="card">
						<div class="card-body">
							<div id="divSearchResult" style="overflow-x:auto;" class="table-responsive">
								@Html.Partial("_PaggingServerSide")
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		CloseSideBar();
		JqueryAutoComplete("/MasterData/Street/AutoCompleteStreetName", "#StreetName");
		JqueryAutoComplete("/MasterData/City/AutoCompleteCityName", "#InCity");
		JqueryAutoComplete("/MasterData/District/AutoCompleteDistrictName", "#InDistrict");
		Select2Init("#Actived");
		var columns = [
			{
				"data": "STT",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "StreetName",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "InDistrict",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "InCity",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "Status",
				"className": "text-center",
				"orderable": true,
			},
			{
				"data": "StreetId",
				"className": "text-center",
				"orderable": false,
				"render": function (data, type, row) {
					if (data != "" && data != null) {
						var s = '<a class="btn btn-info" href="/MasterData/Street/Edit/' + data + '"><i class="fa-solid fa-pen-to-square"></i>Chỉnh sửa</a>';
						return s;
					}
					return "";
				}
			}
		];
		PaggingServerSideSearchInitialWithClick("MasterData/Street", columns, true);
	});
</script>