<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Tạo mới tên đường</h1>
			</div>
			<div class="col-sm-6 text-right">
				<div class="pull-right">
					<a class="btn btn-info" href="/MasterData/Street"><i class="fa-solid fa-arrow-rotate-left"></i>Quay lại</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="content">
	<div class="form-horizontal">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-body">
					<form id="frmCreate" enctype='multipart/form-data'>
						<div class="col-md-12">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-12">
											<div class="row g-3 align-items-center">
												<div class="col-md-2 text-center">
													<label for="StreetName" class="col-form-label">Tên đường</label>
												</div>
												<div class="col-md-10">
													<input type="text" id="StreetName" name="StreetName" class="form-control" required>
												</div>
											</div>
										</div>
										<div class="col-md-12 mt-3">
											<div class="row g-3 align-items-center">
												<div class="col-md-2 text-center">
													<label for="CityId" class="col-form-label">Thuộc thành phố</label>
												</div>
												<div class="col-md-10">
													@Html.DropDownList("CityId", (SelectList)ViewBag.CityList, new { @class = "form-control" })
													@*<input type="text" id="CityId" name="CityId" class="form-control" required>*@
												</div>
											</div>
										</div>
										<div class="col-md-12 mt-3" id="District">
											@*<div class="row g-3 align-items-center">
												<div class="col-md-2 text-center">
													<label for="DistrictId" class="col-form-label">Thuộc quận</label>
												</div>
												<div class="col-md-10">
													<select name="DistrictId" class="form-control" id="DistrictId" multiple disabled></select>
												</div>
											</div>*@
										</div>
									</div>
									<div class="row" style="margin-top: 15px">
										<div class="col-md-12 text-center">
											<button type="button" class="btn btn-primary" id="btn-add">
												<i class="fa fa-plus-square"></i>
												Thêm mới
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		Select2Init("#CityId");
		PreventEnterButton();
		$("#btn-add").on("click", function () {
			SaveData("MasterData/Street", "#frmCreate");
		});

		$("#CityId").on("change", function () {
			var formdata = new FormData();
			formdata.append("CityId", $("#CityId").val());
			$.ajax({
				type: "POST",
				url: "/MasterData/District/GetDistrictByCity",
				data: formdata,
				processData: false,
				contentType: false,
				beforeSend: function () {
					$("#loading").show();
				},
				success: function (data) {
					$("#District").html("");
					$("#District").append(data);
					Select2Init("#DistrictId");
				},
				error: function (event, xhr, options, exc) {
					AlertPopup(2, "Lỗi", event.message);
				},
				complete: function () {
					$("#loading").hide();
				}
			});
		});

		$("#CityId").trigger("change");
	});

</script>

