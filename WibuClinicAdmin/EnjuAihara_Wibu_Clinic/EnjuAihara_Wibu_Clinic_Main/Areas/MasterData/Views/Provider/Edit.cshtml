@model EnjuAihara.EntityFramework.ProviderModel
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Chỉnh sửa @Model.ProviderName</h1>
            </div>
            <div class="col-sm-6 text-right">
                <div class="pull-right">
                    <a class="btn btn-info" href="/MasterData/Provider"><i class="fa-solid fa-arrow-rotate-left"></i>Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <form id="frmEdit" enctype='multipart/form-data'>
        <div class="row">
            @Html.HiddenFor(x => x.ProviderId)
           
            <div class="col-md-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row g-3 align-items-center">
                                    <div class="col-md-2 text-center">
                                        <label for="AccountCode" class="col-form-label">Mã nhà cung cấp</label>
                                    </div>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(x => x.ProviderCode, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 mt-3">
                                <div class="row g-3 align-items-center">
                                    <div class="col-md-2 text-center">
                                        <label for="ProviderName" class="col-form-label">Tên nhà cung cấp</label>
                                    </div>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(x => x.ProviderName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            
                            
                            <div class="col-md-12 mt-3">
                                <div class="row g-3 align-items-center">
                                    <div class="col-md-2 text-center">
                                        <label for="Actived" class="col-form-label">Trạng thái</label>
                                    </div>
                                    <div class="col-md-10">
                                        @Html.ActivedRadioButton(x => x.Actived)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 15px">
                            <div class="col-md-12 text-center">
                                <button type="button" class="btn btn-primary" id="btn-edit" >
                                    Lưu
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript">
	$(document).ready(function () {

		

		$("#btn-edit").on("click", function () {
			Edit("MasterData/Provider", "#frmEdit");
		});

	});
</script>


