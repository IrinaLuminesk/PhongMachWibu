@model EnjuAihara.EntityFramework.MostAskQuestionModel
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Sửa câu hỏi</h1>
			</div>
			<div class="col-sm-6 text-right">
				<div class="pull-right">
					<a class="btn btn-info" href="/MasterData/MostAskQuestions"><i class="fa-solid fa-arrow-rotate-left"></i>Quay lại</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="content">
	<div class="form-horizontal">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-body">
					<form id="frmEdit" enctype='multipart/form-data'>
						@Html.HiddenFor(x => x.MostAskQuestionId)
						<div class="col-md-12">
							<div class="card">
								<div class="card-body">
									<div class="row">

										<div class="col-md-12">
											<div class="row g-3 align-items-center">
												<div class="col-md-2 text-center">
													<label for="Title" class="col-form-label">Tiêu đề</label>
												</div>
												<div class="col-md-10">
													@*<input type="text" id="Title" name="Title" class="form-control">*@
													@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
												</div>
											</div>

											<div class="row g-3 align-items-center mt-2">
												<div class="col-md-2 text-center">
													<label for="Content" class="col-form-label">Nội dung</label>
												</div>
												<div class="col-md-10">
													@*<textarea type="text" id="Content" name="Content" class="form-control"></textarea>*@
													@Html.TextAreaFor(x => x.Detail, new { @class = "form-control" })
												</div>
											</div>

											<div class="row g-3 align-items-center mt-2">
												<div class="col-md-2 text-center">
													<label for="OrderIndex" class="col-form-label">Thứ tự</label>
												</div>
												<div class="col-md-10">
													@*<input type="text" id="OrderIndex" name="OrderIndex" class="form-control">*@
													@Html.TextBoxFor(x => x.OrderIndex, new { @class = "form-control" })
												</div>
											</div>
										</div>
										<div class="col-md-12 mt-2">
											<div class="row g-3 align-items-center">
												<div class="col-md-2 text-center">
													<label for="Actived" class="col-form-label">Trạng thái</label>
												</div>
												<div class="col-md-10">
													@Html.ActivedRadioButton(x => x.Actived)
												</div>
											</div>
										</div>

									</div>
									<div class="row" style="margin-top: 15px">
										<div class="col-md-12 text-center">
											<button type="button" class="btn btn-primary" id="btn-edit">
												Lưu
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function () {



		$("#btn-edit").on("click", function () {
			Edit("MasterData/MostAskQuestions", "#frmEdit");
		});

	});


</script>



