@model EnjuAihara.ViewModels.Permission.Auth.LoginViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Trang đăng nhập</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body style="background-image: url(/Picture/Sinobu.jpg); background-size: 130%;">
	<div class="container mt-5">
		<div class="row justify-content-sm-center">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
				<div class="text-center my-5">
					<h1 class="fs-1 card-title fw-bold mb-4 text-center text-white">Phòng mạch Wibu</h1>
				</div>
				<div class="card shadow-lg">
					<div class="card-body p-5">
						<h1 class="fs-4 card-title fw-bold mb-4 text-center">Đăng nhập</h1>
						@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
						{
							@Html.AntiForgeryToken()
							@Html.HiddenFor(p => p.ReturnUrl)
							@Html.ValidationSummary(false, "", new { @class = "text-danger" })
							<div class="mb-3">
								<label class="mb-2 text-muted" for="email">Tên tài khooản</label>
								@*<input type="text" class="form-control" name="username">*@
								@Html.TextBoxFor(p => p.Username, new { @class = "form-control" })
							</div>

							<div class="mb-3">
								<div class="mb-2 w-100">
									<label class="text-muted" for="password">Mật khẩu</label>
								</div>
								@*<input id="password" type="password" class="form-control" name="password">*@
								@Html.TextBoxFor(p => p.Password, new { @class = "form-control", @type = "password" })
							</div>

							<div class="d-flex align-items-center">
								<div class="form-check">
									@*<input type="checkbox" name="RememberMe" id="RememberMe" class="form-check-input">*@
									@Html.CheckBoxFor(p => p.RememberMe, new { @class = "form-check-input" })
									<label for="RememberMe" class="form-check-label">Nhớ mật khẩu</label>
								</div>
								<button type="submit" class="btn btn-primary ms-auto" id="btn-login">
									Đăng nhập
								</button>
							</div>
						}

					</div>
				</div>
				<div class="text-center text-white mt-5 text-muted">
					<strong>Copyright &copy; @DateTime.Now.Year - Nguyễn Khánh Nhân và Tô Quý Phước.</strong>
					All rights reserved.
				</div>
			</div>
		</div>
	</div>
</body>
</html>
