@model EnjuAihara.ViewModels.Permission.Auth.LoginViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Reset mật khẩu</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>
</head>
<body style="background-image: url(/Picture/Login.jpg); background-size: 130%; background-repeat: no-repeat;">
	<div class="container mt-5">
		<div class="row justify-content-sm-center">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
				<div class="text-center my-5">
					<h1 class="fs-1 card-title fw-bold mb-4 text-center text-white">Phòng mạch Wibu</h1>
				</div>
				<div class="card shadow-lg">
					<div class="card-body p-5">
						<h1 class="fs-4 card-title fw-bold mb-4 text-center">Reset mật khẩu cho tài khoản</h1>
						<div class="mb-3">
							<label class="mb-2 text-muted" for="email">Tên tài khooản</label>
							<input type="text" class="form-control" name="username" id="Username">
							<button type="submit" class="btn btn-primary ms-auto mt-3" id="btn-pass-reset">
								Reset
							</button>
						</div>
					</div>
				</div>
				
				<div class="text-center text-white mt-5 text-muted">
					<strong>Copyright &copy; @DateTime.Now.Year - Nguyễn Khánh Nhân và Tô Quý Phước.</strong>
					All rights reserved.
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		function ResetPass() {
			var formdata = new FormData();
			formdata.append("Username", $("#Username").val());
			$.ajax({
				type: "POST",
				url: "/Permission/Auth/PasswordReset",
				processData: false,
				contentType: false,
				data: formdata,

				success: function (data) {
					/*alert("Vui lòng làm theo hướng dẫn được gửi tới email của tài khoản để khôi phục mật khẩu");*/
					alert(data);
				}
			});
		}


		$(document).ready(function () {
			$("#btn-pass-reset").on('click', function () {
				ResetPass();
			});
		});
	</script>
</body>
</html>
