@{
	bool CreateFlag = CustomeHtmlHelper.CheckPermission("/Permission/Function", "CREATE");
}
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">Quản lý Thao Tác</h1>
			</div>
			<div class="col-sm-6 text-right">
				<div class="pull-right">
					@if (CreateFlag == true)
					{
						<a class="btn btn-primary" href="/Permission/Function/Create" id="btn-create" target="_blank"><i class="fa fa-plus-square"></i> Thêm mới</a>
					}
				</div>
			</div>
		</div>
	</div>
</div>

<div class="content">
	<div class="form-horizontal">
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-body">
					<form id="frmSearch">
						<div class="col-md-12">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="FuctionId" class="col-form-label">Mã chức năng</label>
												</div>
												<div class="col-md-9">
													<input type="text" id="FunctionId" name="FunctionId" class="form-control">
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="row g-3 align-items-center">
												<div class="col-md-3 text-center">
													<label for="FunctionName" class="col-form-label">Tên chức năng</label>
												</div>
												<div class="col-md-9">
													<input type="text" id="FunctionName" name="FunctionName" class="form-control">

												</div>
											</div>
										</div>
									</div>
									<div class="row" style="margin-top: 15px">
										<div class="col-md-12 text-center">
											<button type="button" class="btn btn-primary" id="btn-search">
												<i class="fas fa-search"></i>
												Tìm Kiếm
											</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="card">
						<div class="card-body">
							<div id="divSearchResult">

							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/Scripts/CommonUse/Ganyu.js"></script>
<script type="text/javascript">
	$(document).ready(function () {
		/*Select2Init("#Actived");*/
		SearchInitialWithClick("Permission/Function");
		PreventEnterButton();
	});
</script>
