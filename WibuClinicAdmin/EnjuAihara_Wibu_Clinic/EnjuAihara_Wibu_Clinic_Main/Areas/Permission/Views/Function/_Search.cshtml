@model IEnumerable<EnjuAihara.EntityFramework.FunctionModel>
@{
    int j = 1;
}
<table class="table table-bordered table-striped table-hover dataTableServerSide no-footer" id="tableRes" style="width:100%">
    <thead class="table-header">
        <tr>
            <th class="text-center">STT</th>
            <th class="text-center">Mã chức năng</th>
            <th class="text-center">Tên chức năng</th>
            @*<th class="text-center">Trạng thái</th>*@
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td class="text-center" style="vertical-align: middle;">@j</td>
                <td class="text-center" style="vertical-align: middle;">@i.FunctionId</td>
                <td class="text-center" style="vertical-align: middle;">@i.FunctionName</td>
                @*<td class="text-center" style="vertical-align: middle;">
                    @if (i.Actived == true)
                    {
                        <p>Đang sử dụng</p>
                    }
                    else
                    {
                        <p>Đã ngừng sử dụng</p>
                    }
                </td>*@
                <td class="text-center" style="vertical-align: middle;">
                    <a class="btn btn-info" href="/Permission/Function/Edit/@i.FunctionId"><i class="fa-solid fa-pen-to-square"></i>Chỉnh sửa</a>
                </td>
            </tr>
            j++;
        }
    </tbody>
</table>
