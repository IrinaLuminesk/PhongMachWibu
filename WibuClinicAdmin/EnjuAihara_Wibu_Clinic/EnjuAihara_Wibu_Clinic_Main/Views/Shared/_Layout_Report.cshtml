<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Quản lý phòng mạch Wibu</title>

	@Html.DevExpress().GetStyleSheets(new StyleSheet { ExtensionSuite = ExtensionSuite.Report })
	@Html.DevExpress().GetScripts(new Script { ExtensionSuite = ExtensionSuite.Report })

	@*CDN*@
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>



	@*Dist*@
	<link href="~/Scripts/dist/css/adminlte.min.css" rel="stylesheet" />
	<script src="~/Scripts/dist/js/adminlte.js"></script>
	@*<script src="~/Scripts/dist/js/pages/dashboard3.js"></script>*@
	@*<script src="~/Scripts/dist/js/demo.js"></script>*@

	<script src="~/Scripts/CommonUse/Ganyu.js"></script>

</head>
<body class="hold-transition sidebar-mini" id="bodytag">
	<div class="wrapper">
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a href="/" class="nav-link">Home</a>
				</li>

			</ul>


			<ul class="navbar-nav ml-auto">

				<li class="nav-item">
					<a class="nav-link" data-widget="fullscreen" href="#" role="button">
						<i class="fas fa-expand-arrows-alt"></i>
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
						<i class="fas fa-th-large"></i>
					</a>
				</li>
			</ul>
		</nav>

		<aside class="main-sidebar sidebar-dark-primary elevation-4">

			<a href="/" class="brand-link">
				<img src="~/Picture/LogoAdmin.jpg" class="brand-image img-circle elevation-3" style="opacity: .8">
				<span class="brand-text font-weight-light">Phòng mạch Wibu</span>
			</a>


			@Html.Action("Sidebar", "Shared", new { area = "" })

		</aside>


		<div class="content-wrapper">
			@RenderBody()
			<div id="loading" class="modal" style="background-position: center; background-repeat: no-repeat; position: fixed; top: 0; left: 0; height: 100%; width: 100%; background-image:url(/Picture/GuraLoader2.gif)">
			</div>
			@*<div id="loading2" class="modal" style="background-position: center; background-repeat: no-repeat; position: fixed; top: 0; left: 0; height: 100%; width: 100%; background-image:url(/Picture/GuraDrum2.gif)">
				</div>*@
		</div>

		<aside class="control-sidebar control-sidebar-dark">
			nhhhh
		</aside>


		<!-- Main Footer -->
		<footer class="main-footer">
			<strong>Copyright &copy; @DateTime.Now.Year - Nguyễn Khánh Nhân và Tô Quý Phước.</strong>
			All rights reserved.
		</footer>
	</div>


	<div class="toast-container position-fixed top-0 end-0 p-3">
		<div id="SucessToast" class="toast fade hide bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true" autohide="true">
			<div class="toast-header">
				<i class="fa-regular fa-circle-check"></i>
				<p class="me-auto" style="margin-top:15px; margin-left:10px"></p>
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body">
				<p></p>
			</div>
		</div>

		<div id="WarningToast" class="toast fade hide bg-warning text-white" role="alert" aria-live="assertive" aria-atomic="true" autohide="true">
			<div class="toast-header">
				<i class="fa-solid fa-triangle-exclamation"></i>
				<p class="me-auto" style="margin-top:15px; margin-left:10px"></p>
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body">
				<p></p>
			</div>
		</div>


		<div id="FailToast" class="toast fade hide bg-danger text-white" role="alert" aria-live="assertive" aria-atomic="true" autohide="true">
			<div class="toast-header">
				<i class="fa-solid fa-circle-exclamation"></i>
				<p class="me-auto" style="margin-top:15px; margin-left:10px"></p>
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body">
				<p></p>
			</div>
		</div>

	</div>
	<div id="deleteConfirmModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">
						<h4 class="modal-title">Xóa "<span class="item-name"></span>"</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
						<p class="modal-question">Bạn có chắc bạn muốn xóa "<span class="controller"></span>" này không?</p>
						<p class="text-warning"><small>Hành động này sẽ không thể khôi phục được</small></p>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" id="cancel" data-dismiss="modal" value="Cancel">
						<input type="button" class="btn btn-danger" value="Delete" id="deleteBtn">
						<input type="hidden" id="id" name="id" />
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>
